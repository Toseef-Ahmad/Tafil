{
  "name": "tafil",
  "version": "1.0.0",
  "description": "Tafil - Universal Project Manager for Node.js developers. Manage all your projects in one place with intelligent framework detection, IDE integration, and terminal support.",
  "author": "Touseef Ahmad <ahmadtouseef946@gmail.com>",
  "homepage": "https://github.com/touseef/tafil",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "npm run build-css && electron .",
    "dev": "concurrently \"npm run watch-css\" \"cross-env NODE_ENV=development electron .\"",
    "build-css": "tailwindcss -i ./styles.css -o ./dist/output.css --minify",
    "watch-css": "tailwindcss -i ./styles.css -o ./dist/output.css --watch",
    "build": "npm run build-css && electron-builder --config",
    "build:mac": "npm run build-css && electron-builder --mac --config",
    "build:mac-universal": "npm run build-css && electron-builder --mac --universal --config",
    "build:win": "npm run build-css && electron-builder --win --config",
    "build:linux": "npm run build-css && electron-builder --linux --config",
    "build:all": "npm run build-css && electron-builder -mwl --config",
    "pack": "electron-builder --dir --config",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf release dist"
  },
  "build": {
    "appId": "com.tafil.app",
    "productName": "Tafil",
    "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/node_modules/ps-tree/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "dist/output.css",
      "utils/**/*",
      "assets/**/*",
      "!**/*.map",
      "!**/*.md",
      "!.git",
      "!.vscode",
      "!.cursor",
      "!node_modules/.cache"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "minimumSystemVersion": "10.13.0",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "extendInfo": {
        "NSAppleEventsUsageDescription": "This app needs to control other apps to open terminals and IDEs.",
        "NSSystemAdministrationUsageDescription": "This app needs admin privileges to manage projects."
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Touseef Ahmad"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Tafil",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "linux": {
      "icon": "build/icons",
      "category": "Development",
      "maintainer": "Touseef Ahmad <ahmadtouseef946@gmail.com>",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "desktop": {
        "Name": "Tafil",
        "Comment": "Universal Project Manager for Node.js",
        "Categories": "Development;IDE;",
        "Terminal": "false"
      }
    },
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "deb": {
      "depends": ["libnotify4", "libxtst6", "libnss3"],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "rpm": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "npmRebuild": true,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "publish": null
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "portfinder": "^1.0.32",
    "ps-tree": "^1.2.0"
  }
}
